
body
{
    font-family: 'Century Gothic';
}

header
{
    position: relative;
    height: 35px;
}

header h1
{
    position: relative;
    float: left;
}

#languages
{
    position: relative;
    float: right;
    margin-right: 20px;
}
#langEs, #langUs
{
    height: 25px;
    width: 35px;
    border: 0px;
    text-align: center;
    font-weight: bold;
    background-color: dodgerblue;
    color: white;
    border: 2px dodgerblue solid;
}
#langEs:hover
{
    border: 2px royalblue solid;
    cursor: pointer;
}
#langUs:hover
{
    border: 2px royalblue solid;    
    cursor: pointer;
}

#Bar
{
    position: relative;
    width: 100%;
    height: 25px;
    margin: 45px 0px 10px 0px;    
    border-bottom: 1px grey solid;
    border-top: 1px grey solid;
}

.Sector
{
    position: relative;
    height: 25px;
    float: left;
    text-align: center;
}

#Bar article label
{
    color: white;
    font-weight: bold;
}
#sectionInputData
{
    width: 100%;
    height: 150px;
}

#divInputColors
{
    position: relative;
    width: 75px;
    height: 150px;
    margin-left: 25px;
    border-right: 2px royalblue solid;
    float: left;
}

.TxtInputColor
{
    width: 50px;
    height: 15px;
}

#divShowMessage
{
    position: relative;
    width: 80%;
    height: 150px;
    margin-left: 25px;
    float: left;
}

#lblMessage
{
    position: absolute;
    bottom: 50%;
    font-weight: bold;
    height: 80px;
}

#sectionButton
{
    position: relative;
    border-top: 2px royalblue solid;
    height: 50px;
    width: 100%;
    margin-top: 5px;
}

#divButton
{
    position: relative;
    height: 50px;
    width: 80%;
    left: 50%;
    margin-left: -40%;
    text-align: center;
}

.Button
{
    width: 200px;
    border: 0px solid transparent;
    height: 25px;
    font-size: 14px;
    margin: 5px;
}
.Button:hover
{
    background-color: dodgerblue;
    color: white;
    cursor: pointer;
}

footer
{
    position: relative;
    width: 70%;
    left: 50%;
    margin-left: -35%;
    border-top: 1px gray solid;
    text-align: center;
    font-size: 10px;
    top: -15px;
}
footer a
{
    font-weight: bold;
}
